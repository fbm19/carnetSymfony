{% extends 'base.html.twig' %}

{% block body %}
<a href="../logout">Logout</a>

    <h1>Contact list</h1>

    <table border="1">
        <thead>
            <tr>

                <th>Name</th>
                <th>Mail</th>
                <th>Adress</th>
                <th>Web site</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>

                <td>{{ contact.nameContact }}</td>
                <td>{{ contact.mailContact }}</td>
                <td>{{ contact.adressContact }}</td>
                <td>{{ contact.siteWebContact }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('contact_show', { 'id': contact.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('contact_edit', { 'id': contact.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contact_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
